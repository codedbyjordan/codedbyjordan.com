---
import Layout from "../layouts/Layout.astro";
import TechStack from "../components/TechStack.astro";
import Accomplishments from "../components/Accomplishments.astro";
import { SpotifyWidget } from "../components/spotify/SpotifyWidget";
import { ClickableImage } from "../components/ClickableImage.tsx";
---

<Layout title="Home">
  <div class="flex flex-col gap-4">
    <h1 class="text-3xl font-medium">
      <span class="text-gray-500">//</span> welcome!
    </h1>
    <p class="text-sm lg:text-base">my name is Jordan Baron. I am a</p>
    <ul
      class="list-inside list-disc flex flex-col gap-1 ml-2 text-sm lg:text-base"
    >
      <li>self-taught programmer</li>
      <li>
        software developer @ <a
          href="https://froggyfriends.io"
          target="_blank"
          class="underline">froggy labs</a
        >
      </li>
      <li>
        software engineer @ <a
          href="https://heirloom.io"
          target="_blank"
          class="underline">heirloom</a
        >
      </li>
      <li>aspiring...many things</li>
    </ul>
  </div>

  <SpotifyWidget />
  <TechStack />
  <Accomplishments />

  <div class="flex flex-col gap-4">
    <span class="flex gap-2 text-sm"
      >here's a picture of me with my cat lacy. we have the same smile <span
        class="rotate-[60deg] flex w-max h-max">:&rpar;</span
      ></span
    >

    <ClickableImage
      src="/ME.jpg"
      alt="Jordan and Lacy"
      width={256}
      height={256}
      client:only="solid-js"
    />
  </div>
</Layout>
