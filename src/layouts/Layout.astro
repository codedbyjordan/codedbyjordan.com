---
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap&family=Open+Sans:wght@400;500;700"
      rel="stylesheet"
    />
    <title>{title} | Jordan Baron</title>
  </head>
  <body class="bg-midnight font-lora">
    <div
      class="min-h-screen w-[90%] lg:w-2/3 2xl:w-1/2 mx-auto text-center text-white"
    >
      <Header />
      <div class="mt-16 lg:w-3/4 mx-auto">
        <slot />
      </div>
    </div>
  </body>
</html>

<style is:global>
  p > a {
    @apply text-indigo-400 underline;
  }
</style>
