---
import Layout from "./Layout.astro";
import "../styles/post.css";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="text-left">
    <h2 class="text-2xl md:text-3xl font-bold mb-6">{frontmatter.title}</h2>
    <div class="md:text-xl leading-loose text-white/90">
      <slot />
    </div>
  </article>
  <div class="mt-48"></div>
</Layout>
