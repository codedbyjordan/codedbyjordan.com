--- 
import PageHeader from '../components/PageHeader.astro';
import Layout from './Layout.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout {title}>
  <main class="w-full h-screen flex flex-col items-center mt-16">
    <PageHeader />
    <div class="w-full mt-16 lg:w-3/4 mx-auto mb-12" transition:animate="none">
      <slot />
    </div>
  </main>
</Layout>
